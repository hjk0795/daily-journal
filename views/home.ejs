<%- include("./partials/header.ejs") %>

<h1>Home</h1>
<p><%= Content %></p>
<% post.forEach(function(post) { %>
<h1><%= post.title %></h1>
<% if (post.body.length>100) { %>
<p> <%=post.body.substring(0, 100)%>... <a href="/posts/<%=post.title%>">Read more</a></p>
<% } else { %>
    <p><%= post.body %></p>
<% } %>
<% }) %>

